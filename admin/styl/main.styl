@import 'resources'

*
  margin 0
  padding 0

  &:focus
  &:active
    outline 0

html
  scroll-behavior smooth

html
body
  width 100%
  height 100vh

body
  flex-parent(row, nowrap, flex-start)
  font-family font
  font-size 62.5%

a
  color inherit
  text-decoration none

  &.contrast-link
    color contrast-color

.menu-bar
  flex-basis 30em - 7em
  height calc(100% - 3em)
  padding 3em 3.5em 0 3.5em
  background-color theme-color

  .site-title
    font-size 2.5em
    font-weight 700
    color contrast-text-color

  .pages-menu
    margin-top 7em
    list-style none

    .page-link
      margin-bottom .5em
      font-size 1.7em
      font-weight 400
      color rgba(contrast-text-color, .5)
      cursor pointer

      &.active-link
        color contrast-text-color


.items-bar
  flex-basis 42em
  height 100%
  background-color contrast-color

  .roll-bar-header
    flex-parent(row, nowrap, space-between)
    align-items center
    width calc(100% - 6em)
    padding 1.9em 3em 1.3em 3em
    background-color contrast-color2

    #order-by
      font-size 1.6em
      font-weight 300
      cursor pointer

    #refresh
      flex-basis 2.3em
      height 2.3em
      cursor pointer

  .items-list
    width 100%
    height calc(100% - 5.5em)
    overflow-y auto
    background-color transparent

    .list-item
      width calc(100% - 5em)
      padding 2.5em 2.5em 1em 2.5em
      border-bottom 1px solid contrast-color2
      cursor pointer
      fadeIn(2s)

      &.selected-item
        background-color #fff
        cursor auto

      .item-description
      .item-status
        width 100%
        text-overflow ellipsis
        overflow hidden
        white-space nowrap

      .item-description
        font-size 1.55em
        font-weight 400
        margin-bottom .3em

      .item-status
        font-size 1.3em
        font-weight 700

        &.read
          font-weight 400
          &:after
            content 'lido'

        &.unread
          &:after
            content 'n√£o lido'

.open-content
  width calc(100% - 45em - 12em)
  height calc(100% - 5em)
  padding 5em 6em 0 6em
  background-color #fff

  .content-title
    font-size 2.5em
    font-weight 900
    margin-bottom 1.2em
  
  .content-subtitle
    font-size 2em
    font-weight 400
    font-style italic
    margin-bottom .4em

  .content-detail
    font-size 1.5em
    font-weight 400

  .content-body
    font-size 1.5em
    font-weight 300
    margin-top 2em
    line-height 1.55em
  
  .content-title
  .content-subtitle
  .content-detail
  .content-body
    width 60%

    @media (max-width 1366px)
      width 75%