@import '../resources.styl'

.main
  width 86%
  padding-left 7%
  padding-right 7%

.list-title
  margin-top 3.5em
  margin-bottom 2em
  font-size 2.5em
  font-weight 700
  letter-spacing .2em
  text-transform uppercase

.error-message
  font-size 1.6em
  font-weight 500
  color gray-color

  a
    color deepskyblue

.items-wrapper
  width 100%
  height auto
  flex-parent(row, wrap, flex-start)

  .product-box
    flex-basis 22em
    height auto
    margin 2em 3.5em 1.25em 0
    cursor pointer

    .rounded-box
      width 100%
      height 22em
      border-radius(50%)
      flex-parent(row, nowrap, center)
      background-color lighter-gray-color

      .product-img
        height 82%
        align-self center

    .product-year-price
      margin-top 1em
      font-size 1.6em
      font-weight 500
      text-align center
      letter-spacing .2em
      one-line-text()

      .product-year
        color theme-color