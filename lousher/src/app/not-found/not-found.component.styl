@import '../resources.styl'

.main
  height calc(100vh - 5.9em)
  background rgb(242,158,102)
  background linear-gradient(164deg, rgba(242,158,102,1) 0%, rgba(242,102,118,1) 42%, rgba(242,102,118,1) 100%)

.message-box
  width 100%
  height 100%
  flex-parent(row, wrap, center)
  align-items center
  
  .message-and-options
    flex-basis auto
    height auto
    text-align center

    .error-code
      margin .05em 0 .05em 0
      font-size 35em
      font-weight 700
      color lighter-gray-color
      text-shadow 1px 1px 40px rgba(#000, .2);
      line-height 100%

    .message
    .go-to
      letter-spacing 5px
      color lighter-gray-color
      text-shadow 1px 1px 20px rgba(#000, .2)
    
    .message
      font-size 2em
      font-weight 500
      font-style italic

    .go-to
      padding .25em .4em .25em .4em
      font-size 3em
      font-weight 300
      border-radius(20px 8px 20px 8px)
      transition(.4s)

      &:hover
        //font-style italic
        color theme-color
        background-color rgba(lighter-gray-color, .75)
        box-shadow(0px 0px 22px -2px rgba(#000, .11))