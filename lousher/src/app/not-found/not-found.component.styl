@import '../resources.styl'

.main
  height calc(100vh - 5.9em)

.message-box
  width 100%
  height 100%
  flex-parent(row, wrap, center)
  align-items center
  
  .message-and-options
    flex-basis auto
    text-align center

    .error-code
      margin .05em 0 .05em 0
      font-size 35em
      font-weight 700
      color theme-color
      text-shadow 1px 1px 40px rgba(#000, .2);
      line-height 100%

      background rgb(242,158,102)
      background linear-gradient(164deg, rgba(242,158,102,1) 0%, rgba(242,102,118,1) 42%, rgba(242,102,118,1) 100%)
      -webkit-background-clip text
      -webkit-text-fill-color transparent

      @media (max-width 1366px)
        font-size 25em

      @media (max-width 960px)
        font-size 20em
        margin-bottom .3em

      @media (max-width 600px)
        font-size 12em
    
    .message
      font-size 2em
      font-weight 500
      font-style italic
      display none

      @media (max-width 600px)
        display none

    .message
    .go-to
      letter-spacing 5px
      color theme-color
      text-shadow 1px 1px 20px rgba(#000, .2)

      @media (max-width 960px)
        letter-spacing 2px
        text-transform uppercase

    .go-to
      padding .3em .75em .3em .75em
      font-size 3em
      font-weight 300
      border-radius(20px 8px 20px 8px)
      transition(.4s)

      @media (max-width 960px)
        font-size 2em
        padding .7em 1.5em .7em 1.5em
        border-radius(0)