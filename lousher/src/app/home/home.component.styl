@import '../resources.styl'


.main-banner
  width 100%
  height 41em
  background-image url('../../assets/img/food.jpg')
  background-position-y 25%
  background-repeat no-repeat
  background-size cover
  fadeIn(2s)
  box-shadow(0px 0px 20px 7px rgba(#000, .18))

.middle-page-topic
  width 86%
  margin 0 auto
  margin-top 3.6em
  margin-bottom 2em

.moments-wrapper
  width 86%
  height auto
  margin 0 auto
  flex-parent(row, nowrap, space-between)

  .moment-item
    flex-basis 33%
    height 32em
    border-radius 1em
    background-position center
    background-size cover
    background-repeat no-repeat
    flex-parent(row, nowrap, flex-start)
    transition(.2s)
    cursor pointer

    &:hover
      box-shadow(0px 0px 20px 7px rgba(0, 0, 0, .18))

    &:first-child
      margin-right 2.5em
      background-image url('../../assets/img/couple.jpg')

    &:nth-child(2)
      background-image url('../../assets/img/friends.jpg')

    &:last-child
      margin-left 2.5em
      background-image url('../../assets/img/meeting.jpg')

    .moment-text
      align-self center
      padding .2em .5em .2em .5em
      color #fff
      font-size 4.2em
      font-weight 900
      font-style italic
      text-transform uppercase
      border-top-right-radius .75em
      border-bottom-right-radius .75em
      background-color theme-color
      box-shadow(0px 0px 20px 5px solid rgba(#000, .16))