@import '../resources.styl'

.main-banner
  width 100%
  height 41em
  fadeIn(2s)
  box-shadow(0px 0px 20px 7px rgba(#000, .18))

  @media (max-width 600px)
    display none

  .banner-background
    width 100%
    height 41em
    object-fit cover
    object-position 100% 20%

.middle-page-topic
  width 86%
  margin 0 auto
  margin-top 3.6em
  margin-bottom 2em

  @media (max-width 600px)
    margin-top 1.8em

.moments-wrapper
  width 86%
  height auto
  margin 0 auto
  flex-parent(row, nowrap, space-between)

  @media (max-width 600px)
    flex-wrap wrap

  .moment-item
    flex-basis 33%
    height 32em
    border-radius 1em
    background-position center
    background-size cover
    background-repeat no-repeat
    flex-parent(row, nowrap, flex-start)
    transition(.2s)
    cursor pointer

    @media (max-width 1600px)
      height 30em

    @media (max-width 1440px)
      height 27em

    @media (max-width 1366px)
      height 25em

    @media (max-width 600px)
      flex-basis 100%
      height 20em
      margin-bottom 3em

    &:hover
      box-shadow(0px 0px 20px 7px rgba(0, 0, 0, .18))

    &:first-child
      background-image url('../../assets/img/couple.jpg')

      @media (min-width 601px)
        margin-right 2.5em

    &:nth-child(2)
      background-image url('../../assets/img/friends.jpg')

    &:last-child
      background-image url('../../assets/img/meeting.jpg')
      
      @media (min-width 601px)
        margin-left 2.5em

    .moment-text
      align-self center
      padding .2em .5em .2em .5em
      color #fff
      font-size 4.2em
      font-weight 900
      font-style italic
      text-transform uppercase
      border-top-right-radius .75em
      border-bottom-right-radius .75em
      background-color theme-color
      box-shadow(0px 0px 20px 5px solid rgba(#000, .16))