@import '../resources.styl'

.nav-slider-box
  width 86%
  margin 0 auto
  margin-top 8em
  flex-parent(row, nowrap, flex-start)
  align-items flex-end
  fadeIn(2s)

  .sub-title
    flex-basis auto
    line-height 100%

  .see-section
    flex-basis auto
    margin-left 2em
    font-size 1.4em
    font-weight 600
    line-height 115%
    color theme-color

    &:hover
      text-decoration underline

  .order-by
    flex-basis auto
    height auto
    align-self center
    // trick for aligning it at the end of the div
    margin-left auto
    flex-parent(row, nowrap, flex-start)

    .order-by-pre-text
      align-self center
      font-size 1.5em
      font-weight 600
      line-height 110%
      color #BABABA

    .order-by-box
      margin-left 1.25em
      padding .7em 1.5em .7em 1.5em
      border-radius .5em
      font-size 1.5em
      font-weight 600
      cursor pointer
      background-color lighter-gray-color

.slider-wrapper
  width 86%
  height auto
  margin 0 auto
  margin-top 4em
  fadeIn(2s)

  .gradient-slider-box
    position absolute
    z-index 1
    top 0
    width 14em
    height 100%
    // gradient
    background rgb(2,0,36)
    background -moz-linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8015406846332283) 47%, rgba(255,255,255,1) 100%)
    background -webkit-linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8015406846332283) 47%, rgba(255,255,255,1) 100%)
    background linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8015406846332283) 47%, rgba(255,255,255,1) 100%)
    transition(.1s)
    cursor pointer

    &.left-box
      transform(rotate(180deg))
      left 0

    &.right-box
      right 0

    &.invisible
      width 0
      opacity 0

  .slider
    width 100%
    height auto
    white-space nowrap
    overflow hidden
    scroll-behavior smooth

    .item
      display inline-block
      width 22em
      height auto
      margin-right 3.5em
      cursor pointer

      &:last-child
        margin-right 0

      .item-banner-wrapper
        width 100%
        height 22em
        border-radius 50%
        background-color #f5f5f5
        flex-parent(row, nowrap, center)

        .old-price
          margin-top 5.6em
          text-decoration line-through
          font-size 1.5em
          font-weight 600
          color #BABABA

        .item-img
          margin-left 1.5em
          margin-right 1.5em
          flex-basis auto
          align-self center
          height 85%

        .new-price
          margin-bottom 4.6em
          align-self flex-end
          font-size 1.7em
          font-weight 600
          color theme-color

      .item-name
        margin-top 1.1em
        font-weight 600
        font-size 1.6em
        text-align center

      .price-validity
        margin-top .35em
        font-size 1.3em
        font-weight 600
        text-align center
        color #BABABA