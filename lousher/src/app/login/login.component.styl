@import '../resources.styl'

.login-box
  position fixed
  z-index 2
  right 0
  top 5.9em
  width 33.15em
  height auto
  padding 3.5em 1.5em 3.2em 1.5em
  border-bottom-left-radius 1.5em
  fadeIn(.2s)
  box-shadow(0px 0px 30px 0px rgba(0,0,0,0.16))
  background-color #fff

  .inner-box
    width 95%
    height auto
    margin 0 auto
    flex-parent(row, wrap, center)

    .section-title
      margin-bottom 1.5em
      font-size 2em
      font-weight 800
      text-transform uppercase

      &.theme-color
        color theme-color

      .italic-text
        font-size .9em
        font-style italic
        font-weight 400
        text-transform lowercase

        &.as-link
          cursor pointer

    .sub-section-title
      margin-top .2em
      margin-bottom 1.5em
      font-size 1.7em
      font-weight 300
      text-transform uppercase

      &.with-margin-top
        margin-top 1em

    .read-only-input
      width calc(100% - .5em)
      padding .75em .25em .75em .25em
      margin-bottom 1em
      border-radius(5px)
      font-size 1.4em
      font-weight 500
      color #999
      text-align center
      one-line-text()
      background-color lighter-gray-color

    .form
      width 100%
      height auto
      
      .text-input
        width calc(100% - 32px)
        margin-bottom 15px
        padding 13px 16px 13px 16px
        border-radius(2.5em)
        font-size 1.6em
        font-weight 500
        text-align center
        color gray-color
        background-color #F2F2F2
      
      .form-error
        width 100%
        margin-bottom 1em
        font-size 1.5em
        text-align center
        color orangered

      .button-wrapper
        width 100%
        height auto
        text-align center

        &.bottom-distance
          margin-bottom 4em

        .submit-btn
          padding 12px 33px 12px 33px
          border-radius(15px)
          cursor pointer
          font-size 1.4em
          font-weight 800
          color #fff
          text-align center
          background-color theme-color
          transition(.2s)

          &:hover
            background-color gray-color
            box-shadow(0px 0px 20px -1px rgba(0,0,0,0.11))
            
          &.dark-color
            background-color #000

            &:hover
              background-color gray-color
    
    .order-box
      width 100%
      height auto
      margin-bottom 2em
      //box-shadow(0px 3px 20px 0px rgba(#000, .16))
      border-radius(10px 20px 10px 10px)
      background-color lighter-gray-color

      .order-info
        width calc(100% - 5em)
        height auto
        padding 1.6em 2.5em 1.6em 2.5em
        font-size 1.4em
        font-weight 500
        text-align center

        .title
          color #333

        .simple-text
          margin-top 1em
          color gray-color
      
      .order-status
        width 100%
        padding .3em 0 .3em 0
        font-size 1.45em
        font-weight 500
        color #fff
        text-align center
        border-radius(0 0 10px 10px)
        background-color theme-color

        .bolder
          font-weight 700
    
    .informative-text
      margin 1em 0 .5em 0
      font-size 1.3em
      font-weight 300
      color gray-color
      text-align center